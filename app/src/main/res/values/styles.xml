<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#cc6f10</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Settings" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DarkSettings" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="progress" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#fff</item>
    </style>
    <style name="progress2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>


    <style name="search" parent="android:Theme.DeviceDefault.Dialog">
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>
</resources>
